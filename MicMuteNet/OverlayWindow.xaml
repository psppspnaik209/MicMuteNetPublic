<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MicMuteNet.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MicMuteNet Overlay">

    <!-- Fully transparent background so only the border shows -->
    <Grid Background="Transparent">
        <!-- Modern overlay card with rounded corners and semi-transparent background -->
        <Border x:Name="OverlayBorder"
            Background="#D91E1E2E"
            CornerRadius="16"
            Padding="20,12"
            BorderBrush="#8850C878"
            BorderThickness="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <!-- Icon circle -->
                <Grid Width="40" Height="40">
                    <Ellipse x:Name="IconBackground"
                        Fill="#4450C878"
                        Width="40" Height="40" />
                    <FontIcon x:Name="MuteIcon"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE720;"
                        FontSize="20"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Grid>

                <!-- Status text -->
                <StackPanel VerticalAlignment="Center" Spacing="0">
                    <TextBlock x:Name="StatusText"
                        Text="UNMUTED"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        CharacterSpacing="50" />
                    <TextBlock x:Name="SubStatusText"
                        Text="Microphone is active"
                        FontSize="11"
                        Foreground="#99FFFFFF" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>