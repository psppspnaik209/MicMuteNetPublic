<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MicMuteNet.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MicMuteNet Overlay">

    <Grid>
        <!-- Modern glassmorphism style overlay -->
        <Border x:Name="OverlayBorder"
            Background="#CC1A1A2E"
            CornerRadius="24"
            Padding="24,16"
            BorderBrush="#4488CCFF"
            BorderThickness="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel Orientation="Horizontal" Spacing="16">
                <!-- Animated icon circle -->
                <Grid Width="48" Height="48">
                    <Ellipse x:Name="IconBackground"
                        Fill="#4450C878"
                        Width="48" Height="48" />
                    <FontIcon x:Name="MuteIcon"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE720;"
                        FontSize="24"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Grid>

                <!-- Status text -->
                <StackPanel VerticalAlignment="Center" Spacing="2">
                    <TextBlock x:Name="StatusText"
                        Text="UNMUTED"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        CharacterSpacing="100" />
                    <TextBlock x:Name="SubStatusText"
                        Text="Microphone is active"
                        FontSize="12"
                        Foreground="#99FFFFFF" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>